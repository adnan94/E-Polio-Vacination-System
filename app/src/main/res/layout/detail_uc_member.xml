<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbar_outside"
        layout="@layout/toolbar" />
    <View
        android:visibility="gone"
        android:id="@+id/clist_back_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7fc9c8c8"

        ></View>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/toolbar_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >



        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            app:cardElevation="8dp"

            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:visibility="gone"
                android:id="@+id/cdetail_back_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7fc9c8c8"

                ></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:text="UC Member Details"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/uc_member_image"
                    android:src="@drawable/user"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="10dp"

                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="13sp"
                            android:hint="Uc Member Name : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/uc_member_name"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            android:hint="Adnan Ahmed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"

                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"

                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:hint="Uc Member Email : "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/uc_member_email"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:hint="Abc@xyz.com"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"

                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"

                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:hint="Uc Member NIC No : "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/uc_member_nic"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:hint="xxxxx-xxxxxxx-x:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"

                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"

                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:hint="Uc Member Phone No : "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/uc_member_phone"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:hint="03000000000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"

                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"

                                android:layout_weight="1"
                                android:textSize="13sp"
                                android:hint="Uc Member Area : "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/uc_member_area"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:hint="Nazimabad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>

                <View
                    android:background="#9c000000"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:textColor="#000"
                    android:text="Uc Polio Teams"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:id="@+id/polio_team_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">







                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

    <LinearLayout

        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:src="@mipmap/delete"
            android:id="@+id/delete_uc_details"
            android:layout_height="wrap_content" />


        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:src="@mipmap/edit"
            android:id="@+id/edit_uc_details"
            android:layout_height="wrap_content" />


        <ImageButton
            android:layout_width="wrap_content"
            android:background="@mipmap/sort_btn"
            android:id="@+id/uc_list_sort"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>